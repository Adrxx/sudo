        <script src="/assets/js/typed.min.js"></script>
        <script>
            $(function(){
                $(".title span").typed({
                    strings: ["{{title}}"],
                    typeSpeed: 30,
                    startDelay: 150,
                    backDelay: 600,
                    onStringTyped: function () {
                        $('.text').addClass('revealed');
                    }
                });
            });
        </script>
